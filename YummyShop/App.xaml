             xmlns:local="clr-namespace:YummyShop"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/WindowStyles.xaml"/>
                <ResourceDictionary Source="/View/Styles/ColorMenu.xaml"/>
                <ResourceDictionary Source="/View/Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/View/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/View/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
